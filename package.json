{
  "name": "banking-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.11.56",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "axios": "^1.4.0",
    "i18next": "^25.4.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "jose": "^6.0.13",
    "json-server": "^0.17.3",
    "jsonwebtoken": "^9.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^15.7.2",
    "react-icons": "^5.5.0",
    "react-redux": "^8.1.1",
    "react-router-dom": "^6.14.1",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4",
    "ws": "^8.18.3"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "test:watch": "craco test --watch",
    "test:coverage": "craco test --coverage --watchAll=false",
    "test:coverage:watch": "craco test --coverage",
    "test:ci": "craco test --coverage --watchAll=false --ci --coverageReporters=lcov --coverageReporters=text",
    "test:debug": "craco test --detectOpenHandles --forceExit",
    "eject": "react-scripts eject",
    "server": "json-server --watch db.json --port 3001",
    "websocket": "node websocket-server.js",
    "dev": "concurrently --names \"API,WebSocket,React\" --prefix-colors \"blue,green,yellow\" \"npm run server\" \"npm run websocket\" \"npm start\"",
    "dev:websocket": "concurrently \"npm run websocket\" \"npm start\"",
    "dev:api": "concurrently \"npm run server\" \"npm start\"",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
